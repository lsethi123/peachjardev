.clearfix
	.pull-left
		%b Welcome
		=current_user.username
		-#%b User Email:
		=#@account_info['email']
	.pull-right
		.btn-group
			%a.btn.btn-primary{href: "#"}
				%i.icon-user.icon-white
				=current_user.email
			%a.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
				%span.caret
			%ul.dropdown-menu
				%li
					=link_to(edit_user_registration_path,title:'Edit Profile') do
						%i.icon-edit
						Edit Profile
				%li
					=link_to(destroy_user_session_path,title:'Logout',id:'logout') do
						%i.icon-off
						Logout